<% include ../partials/header %>

<h1>New Provider registration</h1>

<form action="/newprovider" method="post">
    <label for="companyname">Company Name</label>
    <div class="form-group">
      <input class="form-control" id="companyname" type="text" name="companyName" placeholder="Insert Company's Name">
    </div>
    <label for="adress">Adress</label>
    <div class="form-group">
      <input id="adress" class="form-control"  type="text" name="adress" placeholder="Insert Employee's adress">
    </div>
    <label for="niche">Company Niche</label>
    <div class="form-group">
     <select id-"niche" name="companyNiche">
        <option value="Agriculture">Agriculture</option>
        <option value="Automotive">Automotive</option>
        <option value="Banks & Finances">Banks & Finances</option>
        <option value="Building">Building or Construction</option>
        <option value="Drug Manufacturers">Drug Manufacturers</option>
        <option value="Education">Education</option>
        <option value="Entertainmant ">Entertaimant</option>
        <option value="Farming"> Farming </option>
        <option value="Gas & Oil">Gas & Oil</option>
        <option value="Insurance">Insurance</option>
        <option value="Lawyer/Law firm">Lawyer/Law Firm</option>
        <option value="Medical Supplies">Medical Supplies</option>
        <option value="Mining">Mining</option>
        <option value="Music Production">Music Production</option>
        <option value="Newspaper, Magazine & Book Publishing">Newspaper, Magazine & Book Publishing</option>
        <option value="Phone Companie">Phone Companie</option>
        <option value="Power Utilities">Power Utilities</option>
        <option value="Professional Sports">Professional Sports</option>
        <option value="Radio/TV">Radio/TV Station</option>
        <option value="Restaurant & Drinking">Restaurant & Drinking</option>
        <option value="Sea Transport">Sea Transport</option>
        <option value="Steel Production">Steel Production</option>
        <option value="Transportation">Transportation</option>
        <option value="Vegetables & Fruits">Vegetables & Fruits</option>
        <option value="Waste Management">Waste Management</option>
        <option value="Wine, Beer & Liquor">Wine, Beer & Liquor</option>
      </select>
    </div>
    <label for="firstname">Provider Contact's First Name</label>
    <div class="form-group">
      <input id="firstname" class="form-control" type="text" name="firstname" placeholder="Insert Provider Contact's first name">
    </div>
    <label for="lastname">Provider Contact's Last Name</label>
     <div class="form-group">
      <input id="lastname" class="form-control" type="text" name="lastname" placeholder="Insert Provider Contact's last name">
    </div>
    <label for="email">E-Mail for contact</label>
     <div class="form-group">
      <input id="email" class="form-control" type="email" name="email" placeholder="Insert Provider's Email">
    </div>
    <label id="phone">Phone Number</label>
     <div class="form-group">
      <input id="phone" class="form-control" type="number" name="phoneNumber" placeholder="Insert Provider's phone">
    </div>
    <label for="username">Provider Username</label>
    <div class="form-group">
      <input id="username" class="form-control" type="text" name="username" placeholder="Insert Provider Login Username">
    </div>
    <label for="password">Password</label>
    <div class="form-group">
      <input id="password" class="form-control" type="password" name="password" placeholder="Insert Provider's login password">
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block">Register new provider</button>
    </div>
</form>



<% include ../partials/footer %>